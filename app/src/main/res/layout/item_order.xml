<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/item_order_customer_iv"
            android:src="@mipmap/ic_person_black"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:scaleType="centerCrop"/>
    <TextView
            android:text="Deepak Prasad "
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_customer_name_tv"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/item_order_id_tv"
            app:layout_constraintStart_toEndOf="@+id/item_order_customer_iv" android:layout_marginStart="8dp"/>
    <TextView
            android:text="89772382821"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/item_order_id_tv"
            app:layout_constraintStart_toEndOf="@+id/item_order_customer_iv"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <TextView
            android:text=" 12AM, tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/item_order_delivery_time_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView8" android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/item_order_customer_name_tv" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:textSize="12sp" android:textStyle="bold"/>
    <TextView
            android:text="Preparing"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_status_tv"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/color_green" android:textSize="14sp" android:textStyle="normal|bold"
            android:textAlignment="textEnd" app:layout_constraintTop_toBottomOf="@+id/item_order_customer_name_tv"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="32dp" app:srcCompat="@mipmap/ic_green_circle"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="View Cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_view_cart_btn"
            style="?android:attr/buttonBarButtonStyle"
            app:layout_constraintEnd_toStartOf="@+id/item_order_change_status_btn" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/item_order_status_tv"/>
    <Button
            android:text="Ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_change_status_btn" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/item_order_status_tv"/>
    <TextView
            android:text="Delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_delivery_pickup_tv"
            android:textStyle="bold" android:textColor="@color/color_green"
            app:layout_constraintStart_toEndOf="@+id/item_order_customer_iv"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_order_customer_name_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>